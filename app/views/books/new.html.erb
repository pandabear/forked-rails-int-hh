<h1><%= t('.new_book') %></h1>

<div class="well">
  <h3><%= t('.find_by_isbn') %></h3>

  <%= form_tag new_book_path, method: :get, class: 'form-horizontal' do %>
    <fieldset>
      <div class='control-group'>
        <label class='control-label' for="isbn"><%= t('.isbn') %></label>
        <div class='controls'>
          <%= text_field_tag :isbn %>
        </div>
      </fieldset>
      <fieldset>
        <div class='controls'>
          <%= submit_tag t('.find'), class: 'btn-primary' %>
        </div>
    </fieldset>
  <% end %>
</div>

<%= render partial: 'form' %>