<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to root_path, class: 'brand' do %>
        <%= image_tag "books.png", width: '20px' %>  
        <%= t('.link_button') %>
      <% end %>
      <span class="pull-right">
        <ul class="nav">
          <% if current_user %>
            <li>
              <%= link_to t('.link_profile_edit'), edit_user_path(current_user) %>
            </li>
            <li>
              <%= link_to t('.link_logout'), session_path, method: :delete %>
            </li>
          <% else %>
            <li>
              <%= link_to t('.link_login'), new_session_path %>
            </li>
            <li>
              <%= link_to t('.link_signup'), new_user_path %>
            </li>
          <% end %>
        </ul>
      </span>
    </div>
  </div>
</div>
