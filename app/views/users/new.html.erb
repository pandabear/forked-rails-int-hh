<h1><%= t('.sign_up') %></h1>

<%= form_for @user do |f| %>

  <% unless @user.errors.empty? %>
    <div class="alert-message block-message error">
      <h2><%= t('.sign_up_fail') %></h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <fieldset>
    <div class="clearfix">
      <label><%= t('.email') %></label>
      <div class="input">
        <%= f.text_field :email %>
      </div>
    </div>
    <div class="clearfix">
      <label><%= t('.password') %></label>
      <div class="input">
        <%= f.password_field :password %>
      </div>
    </div> 
    <div class="clearfix">
      <label><%= t('.password_repeat') %></label>
      <div class="input">
        <%= f.password_field :password_confirmation %>
      </div>
    </div>
  </fieldset>
 
  <div class="actions">    
   <%= f.submit t('.submit'), class: 'btn primary' %>
  </div>

<% end %>
